generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @unique @default(uuid())
  name     String
  email    String    @unique
  password String
  previousJobs  String?
  projects String
  skills   String
  createdAt DateTime  @default(now())
  job      Job[]
}

model Job {
  id        String   @id @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  status    String
  link      String
  jobDescription String
  type      String
  resume   String?
  coverLetter String?
  resumeLink String?
  coverLetterLink String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
